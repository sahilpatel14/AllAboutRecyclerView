<?xml version="1.0" encoding="utf-8"?>

<!--
    Creating a layout for items.
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="?attr/listPreferredItemHeight">

    <ImageView
        android:layout_marginStart="5dp"
        android:id="@+id/iv_ship_image"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_solid_circle"
        android:layout_alignParentStart="true"
        android:layout_width="48dp"
        android:layout_height="48dp" />


    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_ship_image"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_ship_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Queen Anne's Revenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_captain_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Hector Barbosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>